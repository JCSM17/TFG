            android:src="@drawable/curls_polea_alta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoCurlPoleaAlta" />

        <Button
            android:id="@+id/botonVideoCurlPoleaAlta"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="88dp"
            android:contentDescription="@string/descripcion_boton_video_curl_polea_alta"
            android:text="@string/boton_video"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toEndOf="@+id/imagenCurlPoleaAlta"
            app:layout_constraintTop_toBottomOf="@+id/repsCurlPoleaAlta" />


        <ImageButton
            android:id="@+id/imagenCheckVolumenLunes"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/descripcion_imagen_check"
            android:scaleType="fitCenter"
            android:src="@drawable/check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagenCurlPoleaAlta" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>