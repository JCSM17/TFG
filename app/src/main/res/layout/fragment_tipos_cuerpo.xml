<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jc.TiposCuerpoFragment">

    <include
        android:id="@+id/jjjfit"
        layout="@layout/fragment_jjjfit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/botonCronometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tipo de Cuerpo"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jjjfit" />


    <RadioGroup
        android:id="@+id/bodyTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCronometro"
        app:layout_constraintVertical_bias="0.156">

        <LinearLayout
            android:id="@+id/bodyType1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bodyType1Image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/ectomorfo" />

            <TextView
                android:id="@+id/bodyType1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:text="Ectomorfo"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/botonTipoEctomorfo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bodyType2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bodyType2Image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/mesomorfo" />

            <TextView
                android:id="@+id/bodyType2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:text="Mesomorfo"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/botonTipoMesomorfo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bodyType3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bodyType3Image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/endomorfo" />

            <TextView
                android:id="@+id/bodyType3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:text="Endomorfo"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/botonTipoEndomorfo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="40dp" />

        </LinearLayout>

    </RadioGroup>

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodyTypeRadioGroup" />

    <Button
        android:id="@+id/botonFinalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Finalizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator2" />

</androidx.constraintlayout.widget.ConstraintLayout>