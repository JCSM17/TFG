<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">

    <include
        android:id="@+id/header"
        layout="@layout/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tipo de Cuerpo"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />


    <RadioGroup
        android:id="@+id/bodyTypeRadioGroup"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionText"
        app:layout_constraintVertical_bias="0.156">

        <LinearLayout
            android:id="@+id/bodyType1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bodyType1Image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/ectomorfo2" />


            <TextView
                android:id="@+id/bodyType1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:text="Ectomorfo"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/bodyType1RadioButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bodyType2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bodyType2Image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/mesomorfo2" />

            <TextView
                android:id="@+id/bodyType2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:text="Mesomorfo"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/bodyType2RadioButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bodyType3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bodyType3Image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/endomorfo2" />

            <TextView
                android:id="@+id/bodyType3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:text="Endomorfo"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/bodyType3RadioButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="40dp" />

        </LinearLayout>

    </RadioGroup>

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodyTypeRadioGroup" />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Finalizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator2" />

</androidx.constraintlayout.widget.ConstraintLayout>