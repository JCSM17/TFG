<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo del ProgressBar -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="#D3D3D3" /> <!-- Color de fondo gris claro -->
        </shape>
    </item>

    <!-- Progreso secundario (opcional) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#C0C0C0" /> <!-- Color del progreso secundario -->
            </shape>
        </clip>
    </item>

    <!-- Progreso principal -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#3F51B5" /> <!-- Color del progreso -->
            </shape>
        </clip>
    </item>

</layer-list>
